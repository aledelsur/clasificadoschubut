

<%= content_for :left_column do %>

  <div class="how-to-publicate">
    <ul>
      <li><p>¿Cómo publicar un clasificado?</p></li>
      <li>1. Registrate</li>
      <li>2. Registrate</li>
    </ul>
  </div>

  <div class="how-to-buy">
    <ul>
      <li><p>¿Cómo Comprar?</p></li>
      <li>1. Utilizá nuestra barra de búsqueda</li>
      <li>2. Elegí el que más te gusta</li>
    </ul>    
  </div>
  
  <h3>Últimos clasificados</h3>

  <ul class="thumbnails">
    <li class="span3">
      <div class="thumbnail">
        <% @last_publications.each do |publication| %>
        <div id="s3slider">
          <ul id="s3sliderContent">
              <li class="s3sliderImage">
                <%#= image_tag(publication.images.first.image.url(:small)) %>
                <%= link_to image_tag("logo1.jpg"), root_path %>
                <span></span>
              </li>
              <div class="clear s3sliderImage"></div>
          </ul>
        </div>
        <div class="clear"></div>
        <h3><%= publication.title %></h3>
        <p>Thumbnail caption...</p>
        <% end %>

      </div>
    </li>
  </ul>



<% end %>

<div class="cities well">
  <%= render :partial => "cities" %>
</div>

<div class="categories well">
  <%= render :partial => "categories" %>
</div>
