<a href="#myModal" role="button" data-toggle="modal">Ver más ciudades</a>
 
<!-- Modal -->
<div id="myModal" class="modal hide fade all-cities-index" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Ver clasificados en:</h3>
  </div>
  <div class="modal-body">
    
    <% @cities.each do |city| %>
      <p style="width: 185px; float: left; font-size: 15px; margin: 0;"><%= link_to city.name, search_path(:event => "search_by_city", :city => city.key), :style=>"font-size: 13px;" %></p>
    <% end %>
  </div>
  <div class="modal-footer">
  </div>
</div>