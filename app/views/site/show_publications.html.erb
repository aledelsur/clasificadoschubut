<% content_for :search_criteria do %>
  <%= render :partial => "shared/search_criteria" %>
<% end %>

<% content_for :left_column do %>
  <div class="left-column">
    <% if (@event == "search_by_city" && params[:index] == "true") || (@event == "search_by_subcategory" && params[:index] == "false") %>
      <%= render :partial => "shared/left_column_show_categories" %>
    <% elsif (@event == "search_by_subcategory" && params[:index] == "true") || (@event == "search_by_city" && params[:index] == "false") || (@event == "search_by_textfield") %>
      <%= render :partial => "shared/left_column_show_cities" %>
    <% end %>
  </div>
<% end %>

<div class="show-publications">
  <%= render :partial => "show_publications_content", :locals => {:publications => @publications} %>
</div>