<% content_for :search_criteria do %>
  <%= render :partial => "shared/search_criteria" %>
<% end %>

<% content_for :left_column do %>
  <% if (@event == "search_by_city" && params[:index] == "true") || (@event == "search_by_subcategory" && params[:index] == "false") %>
    <%= render :partial => "shared/left_column_show_categories" %>
  <% elsif @event == "search_by_subcategory" && params[:index] == "true" || (@event == "search_by_city" && params[:index] == "false") %>
    <%= render :partial => "shared/left_column_show_cities" %>
  <% end %>
<% end %>
<div class="show-publications">
    <% @publications.each do |publication| %>
      <% if publication %>
        <div class="divider"></div>
        <div class="one-result">
          <div class="image">
            <%= link_to(image_tag("logo1.jpg", :class=>"img-polaroid"), "#") %>
          </div>
          <div class="details">
            <div class="title">
              <%= link_to(publication.info[:title], "#") %>
            </div>
            <div class="description">
              <%= link_to(truncate(publication.info[:description].html_safe, :length=>300), "#")  if publication.info[:description]%>
            </div>
            <div class="elapsed-time">
                Última actualización <%= elapsed_time(publication.info[:created_at]) %>
            </div>
          </div>
          
          <div class="price-column">
            <div class="price">
              <span><%= set_currency(publication.info[:currency]) %></span>
              <span><%= publication.info[:price]  %></span>
            </div>
            <div class="city">
              <span><%= publication.info[:city] %></span>
            </div>
            <div class="status">
              <span><%= publication.info[:status].capitalize if publication.info[:status] %></span>
            </div>
            <% if publication.info[:type] == "VehiculosPublication" %>
              <div class="status">
                <span><%= publication.info[:km] %> km</span>
              </div>
            <% end %>
            <div class="urgent">
              <% if publication.info[:urgent] == true %>
                <span class="label label-success">Vendo urgente</span>
              <% end %>            
            </div>
            
          </div>

        </div>
      <% end %>  
    <% end %>
</div>