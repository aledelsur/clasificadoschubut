<%= semantic_form_for @user, :url => user_path(:event => "basic_info") do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs :name => "Información básica" do %>
    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :address %>
    <%= f.input :phone %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>


<%= semantic_form_for @user, :url => user_path(:event => "change_password") do |f| %>
  <%= f.semantic_errors %>
  <%= f.inputs :name => "Modificar contraseña" do %>
    <%= f.input :current_password %>
    <%= f.input :password %>
    <%= f.input :password_confirmation %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :button %>
  <% end %>
<% end %>
